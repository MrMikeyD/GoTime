<Window x:Class="GoUI.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DebugWindow" Height="110" Width="300">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,5,5">
      <Label Content="Enter X-Coor: "/>
      <TextBox x:Name="XCoorTB" Width="50" Text="0" HorizontalContentAlignment="Center" Margin="3,0,0,0"/>
    </StackPanel>
    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5,5,5">
      <Label Content="Enter Y-Coor: "/>
      <TextBox x:Name="YCoorTB" Width="50" Text="0" HorizontalContentAlignment="Center" Margin="3,0,0,0"/>
    </StackPanel>
    <Button x:Name="SubmitBtn" Margin="10,10,10,10" Grid.Column="1" Grid.RowSpan="2" Content="Play Stone"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
  </Grid>
</Window>
